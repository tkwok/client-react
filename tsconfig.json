{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015"],
    "strict": true,
    "declaration": true
  },
  "include": ["./src/**/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
