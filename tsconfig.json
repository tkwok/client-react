{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "declaration": true
  },
  "include": ["./src/**/**/*"],
  "exclude": ["node_modules", "src/**/*.test.tsx"]
}
